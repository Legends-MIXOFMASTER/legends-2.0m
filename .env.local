# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Legends of Cocktails
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRATION=7d

# Database Configuration
DATABASE_URL=file:./database.db

# Error Logging (Sentry)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=legends-of-cocktails

# Analytics (Mixpanel)
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_project_token

# External API Keys (if any)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=
NEXT_PUBLIC_CLOUDINARY_API_KEY=

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_LOGGING=true

# Development Specific
CHOKIDAR_USEPOLLING=true
